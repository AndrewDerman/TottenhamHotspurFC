<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashScreenTheme" parent="Theme.TottenhamHotspurFC">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="PlayerFragmentStatsCardTitleText">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/fragment_player_stats_card_title_text_size</item>
        <item name="android:textColor">@color/th_accent_green</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="PlayerFragmentStatsText">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/fragment_player_stats_card_title_text_size</item>
        <item name="android:textColor">@color/th_primary_blue</item>
    </style>

    <style name="PlayerFragmentStatsTitleText">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/fragment_player_header_info_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/th_black</item>
    </style>

    <style name="SeasonTablesStyle">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/item_standing_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginStart">@dimen/item_standing_margin</item>
        <item name="android:layout_marginEnd">@dimen/item_standing_margin</item>
        <item name="android:textColor">@color/th_black</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="ItemFixtureTextStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/item_fixture_text_size</item>
        <item name="android:textColor">@color/th_black</item>
    </style>

    <style name="ItemFixtureMainTextStyle" parent="ItemFixtureTextStyle">
        <item name="android:textSize">@dimen/item_fixture_main_text_size</item>
    </style>

    <style name="ItemFixtureScoreTextStyle" parent="ItemFixtureTextStyle">
        <item name="android:textSize">@dimen/item_fixture_score_text_size</item>
    </style>

    <style name="FragmentFixtureInfoTextStyle" parent="ItemFixtureTextStyle">
        <item name="android:textColor">@color/th_primary_white</item>
    </style>

    <style name="FragmentFixtureInfoMainTextStyle" parent="FragmentFixtureInfoTextStyle">
        <item name="android:textSize">@dimen/fragment_fixture_info_teams_text_size</item>
    </style>

    <style name="FragmentFixtureInfoScoreTextStyle" parent="FragmentFixtureInfoTextStyle">
        <item name="android:textSize">@dimen/fragment_fixture_info_score_text_size</item>
    </style>

</resources>